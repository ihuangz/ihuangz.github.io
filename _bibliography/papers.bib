}

@article{yu_stress_2019,
	title = {Stress {Field} in the 2016 {Kumamoto} {Earthquake} ( \textit{{M}} 7.3) {Area}},
	volume = {124},
	issn = {2169-9313, 2169-9356},
	url = {https://onlinelibrary.wiley.com/doi/10.1029/2018JB017079},
	doi = {10.1029/2018JB017079},
	abstract = {We used 1‐D and 3‐D velocity models to determine focal mechanism solutions (FMSs) of 349 crustal earthquakes (M 2.7–7.3) and stress tensors in the source area of the 2016 Kumamoto earthquake (M 7.3) that occurred on the Futagawa‐Hinagu fault zone in Kyushu, Southwest Japan. There are some differences in the FMSs determined with the 1‐D and 3‐D velocity models. The use of the 3‐D velocity model leads to better results of stress tensors, which are determined by inverting the FMSs. The orientation of the minimum stress (σ3) axis is more accurately determined, which trends NNW‐SSE to N‐S nearly horizontally. In contrast, the axes of the maximum and intermediate stresses (σ1 and σ2) trend WSW‐ENE to E‐W with wide ranges. Signiﬁcant spatiotemporal variations of the stress ﬁeld are revealed in the Kumamoto source zone, indicating a small magnitude of deviatoric stress. The friction coefﬁcient of the faults is estimated to be relatively small ({\textasciitilde}0.4), indicating that the seismogenic faults in central Kyushu are weak. The fault weakening may be caused by ﬂuids beneath the source area and arc magma under the nearby Aso active volcano.},
	language = {en},
	number = {3},
	urldate = {2022-08-10},
	journal = {Journal of Geophysical Research: Solid Earth},
	author = {Yu, Zhiteng and Zhao, Dapeng and Li, Jiabiao and Huang, Zhouchuan and Nishizono, Yukihisa and Inakura, Hirohito},
	month = mar,
	year = {2019},
	pages = {2638--2652},
}

@article{yu_mantle_2017,
	title = {Mantle structure beneath the incipient {Okavango} rift zone in southern {Africa}},
	volume = {13},
	issn = {1553-040X, 1553-040X},
	url = {https://pubs.geoscienceworld.org/geosphere/article/13/1/102-111/208023},
	doi = {10.1130/GES01331.1},
	abstract = {Numerous investigations of the mature segments of the East African rift system (EARS) have significantly improved our understanding of the structure and processes associated with well-developed continental rifts. In contrast, knowledge of rifting processes at their early stage is still significantly limited. Here we present results from a teleseismic P-wave tomography investigation of the incipient Okavango rift zone (ORZ), which is located at the southwestern terminus of the EARS. P-wave relative travel-time residuals recorded by 17 recently deployed portable seismic stations were manually picked and inverted for three-dimensional upper-mantle and mantle transition-zone tomographic images beneath the ORZ and its adjacent areas. High-velocity anomalies probably representing cratonic lithosphere are visible under the Congo and Kalahari cratons, extending to depths of {\textasciitilde}250–350 km. The tectonic boundary of the Congo craton is observed along the western edge of the ORZ. A localized low-velocity anomaly of about –1\% in magnitude is revealed in the upper astheno­sphere beneath the ORZ, which is interpreted to represent decompression melting induced by lithospheric thinning. The results support the notion that the initiation and early-stage development of the ORZ are mostly due to lithospheric stretching resulted from the relative motion between the Archean Congo and Kalahari cratons along preexisting ancient orogenic zones.},
	language = {en},
	number = {1},
	urldate = {2022-08-10},
	journal = {Geosphere},
	author = {Yu, Youqiang and Liu, Kelly H. and Huang, Zhouchuan and Zhao, Dapeng and Reed, Cory A. and Moidaki, Moikwathai and Lei, Jianshe and Gao, Stephen S.},
	month = feb,
	year = {2017},
	pages = {102--111},
}

@article{xu_lateral_2020,
	title = {Lateral variation of the mantle transition zone beneath the {Tibetan} {Plateau}: {Insight} into thermal processes during {Indian}–{Asian} collision},
	volume = {301},
	issn = {00319201},
	shorttitle = {Lateral variation of the mantle transition zone beneath the {Tibetan} {Plateau}},
	url = {https://linkinghub.elsevier.com/retrieve/pii/S0031920119303607},
	doi = {10.1016/j.pepi.2020.106452},
	abstract = {The Indian plate began to subduct under the Eurasian plate in the late Mesozoic. Since the Eocene, continuous continental collision has resulted in the uplift of the Tibetan Plateau with extensive volcanic activities. Geophysical and geochemical studies have suggested that the Indian plate subducted and that volcanism originated in the deep upper mantle. However, the depth range of the subduction and volcanism and the relationship between them are still unclear. Here, to image the mantle transition zone (MTZ) structures, we deployed new seismic stations and collected as much seismic data as possible from the Tibetan Plateau. We then calculated the receiver functions and analyzed them using the common conversion point stacking method. We found that the MTZ is thickened by {\textasciitilde}20 km under the Lhasa block, where high-velocity anomalies are obvious in the MTZ. Apparent thinning of the MTZ by {\textasciitilde}20 km was revealed under the Qiangtang and Songpan-Ganze blocks, confirming a component of depleted mid-oceanic ridge basalt in the magmatic rocks. Our results suggest that the Indian Plate has at least subducted to the MTZ, which has further induced mantle upwelling and volcanism in the Tibetan Plateau.},
	language = {en},
