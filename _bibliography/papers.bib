@article{zhao_seismic_2023,
	title = {Seismic anisotropy and geodynamics of the {East} {Japan} subduction zone},
	volume = {156},
	copyright = {All rights reserved},
	issn = {02643707},
	url = {https://linkinghub.elsevier.com/retrieve/pii/S0264370723000157},
